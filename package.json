      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "mini-css-extract-plugin": "2.4.5",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix",
